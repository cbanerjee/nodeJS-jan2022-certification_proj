    <script>
        function getuserDetails() {
            var oReq = new XMLHttpRequest();
            oReq.open("GET", "/geruserdetails/");
            oReq.send();
            oReq.onload = function () {
                json = JSON.parse(oReq.responseText);
                document.getElementById('userdetails').innerHTML = `Username : ${json.name}, Email : ${json.email}`;
                // console.log(JSON.stringify(json));
            };
        }

        getuserDetails();
    </script>
